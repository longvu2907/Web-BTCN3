<div class="container d-flex flex-column align-items-center gap-4">
  <div class="d-flex flex-column">
    <h1 class="text-center">Top Rating</h1>
    <div id="top-rating-movie" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner top-rating">
        {{#each topRatingMovie}}
          <div class="carousel-item" data-bs-interval="3000">
            <a href="/movie/{{this.id}}">
              <img src="{{this.image}}" class="d-block w-100" />
            </a>
          </div>
        {{/each}}
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#top-rating-movie"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#top-rating-movie"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <div class="d-flex flex-column">
    <h1 class="text-center">Top Popular</h1>
    <div id="top-popular-movie" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner top-popular">
        {{#each topPopularMovie}}
          <div class="carousel-item" data-bs-interval="3000">
            <a href="/movie/{{this.id}}">
              <img src="{{this.image}}" class="d-block w-100" />
            </a>
          </div>
        {{/each}}
      </div>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#top-popular-movie"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#top-popular-movie"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>

<style>
  .carousel-inner { width: 350px; }
</style>

<script>
  document.querySelector('.top-rating .carousel-item').classList.add('active')
  document.querySelector('.top-popular .carousel-item').classList.add('active')
</script>